<%- include("partials/header") %> 


<section id="contact">
    <div class="container">
       <div class="form-container">
          <div class="left-container">
             <div class="left-inner-container">
                <h2>Let's Chat</h2>
                <p>Whether you have a question or  simply want to connect.</p>
                <br>
                <p>Feel free to send us a message in the contact form.</p>
             </div>
          </div>
          <div class="right-container">
             <div class="right-inner-container">
                <form action="#" id="form">
                   <h2 class="lg-view" id="heading">Contact</h2>
                   <h2 class="sm-view">Let's Chat</h2>
                   <div class="social-container">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                   </div>
                   <input type="text" placeholder="Name" id="fname"/>
                   <input type="email" placeholder="Email address" id="email"/>
                   <textarea rows="4" placeholder="Message" id="message"/></textarea>
                   <button type="submit">Submit</button>
                </form>
             </div>
          </div>
       </div>
    </div>
    <div id="popup1" class="overlay">
        <div class="popup">
            <h2>Thank you!</h2>
            <span class="close" id="x">&times;</span>
            <div class="content">
                Your message has been sent successfully. We will get back to you soon!
            </div>
        </div>
    </div>
 </section>
 
 

<%- include("partials/footer") %> 
